*, *:before, *:after
    box-sizing border-box
    margin 0
    padding 0
body
    color #444
    user-select auto
ul li
    list-style none
    user-select none
    cursor default

a
    text-decoration none
    color gray
p
    padding-top: .5rem;

img
    max-width 100%

hr
    margin 1rem 0

a:hover
    color gray

a:link
    text-decoration none

textarea, input[type]
    outline none

input[type="text"]:focus
    outline none

input:-webkit-autofill
    box-shadow 0 0 0 30px white inset
    -webkit-text-fill-color gray !important

textarea[type="text"]:focus
    outline none

iframe
    border 0
    margin .8rem 0

input[type="text"]:focus
    outline none

input[type="submit"]:focus
    outline none

input[type="search"]:focus
    outline none

select:focus
    outline none

textarea[type="text"]:focus
    outline none

::-webkit-scrollbar
    display none

::-moz-placeholder
    color #d8d7d7
::-webkit-input-placeholder
    color #d8d7d7

input, textarea, select
    appearance none
select
    background #fff
    // height 28px
    border-radius 0
input
select
    border 0
    // padding .5rem
    // margin 0 1px

blockquote
    padding 0 1rem
    margin 1rem 0
    color #666
    border-left 0.25em solid #ddd
    p
        display block
        padding 0
        color #767676

// checkbox anim

.noselect
    user-select none

.checkbox
  display none

table
    margin 1rem 0

pre
    display inline-block
    width calc(100% + 2rem)
    margin 1rem 0
    padding 1rem
    font-size 14px
    // line-height 1.42857143
    word-break break-all
    word-wrap break-word
    color #333333
    // background-color #f5f5f5
    background #f0f0f0
    border-top 1px solid #E0E0E0
    border-bottom 1px solid #E0E0E0
    counter-reset line

h1
    font-size 1.2rem
h2
    font-size 1.1rem
h3
    font-size 1rem
h4
    font-size .8rem

h1, h2, h3, h4
    margin 1rem 0 .5rem 0

.hide
    display none

.fadein
    opacity 1
    transition opacity .25s ease-in-out

.fadeout
    // opacity 0
    // transition opacity .25s ease-in-out
    opacity:0;
    height: 0;
    padding: 0 8px;
    overflow: hidden;
    transition: all .3s ease .15s;

.spinner
    position absolute
    // display none
    top 45%
    left 45%
    z-index 1000
    height 40px
    width 40px
    transform translate(-50%, -50%)
    animation rotate 0.8s infinite linear
    border 8px solid lighten(#fff, 80%)
    border-right-color transparent
    border-radius 50%
